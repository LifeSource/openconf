coolBlue = #71bdd6

.container
    max-width 1200px
    margin 0 auto
    justify-content center

body
    font-family "Lato", sans-serif

h1, h2, h3, h4, h5, h6 
    margin 0
    padding 0

.text-center 
    text-align center

.site-heading
    margin-bottom 10px
    font-family "Open Sans", serif

.navigation
    padding 20px auto
    margin-bottom 20px
    font-family "Open Sans", serif

a,  a:link, a:visited, a:hover, a:active
    color #33
    text-decoration none    
p
    font-size 1.1em

ul
    padding 0
    margin 0
    list-style none

i, .heading-title
    color #aa

// Title
.title 
    margin-left 20px

// Navigation
.nav-list
    margin 0
    padding 0

.nav-list li
    font-size 1.5em
    margin-right 1.5%
    padding 0.5% 2.5%
    display inline-block

.nav-list li:hover
    transition background 0.8s linear

.active
    border-top 3px solid #ff875f
    border-bottom 3px solid #ff875f

// Sessions
.sessions-list li
    padding 20px
    margin-bottom 20px

.sessions-list li:hover
    color #ff
    border-radius 10px
    background #55
    //background coolBlue
    transition background 0.8s linear

.slots
    font-size 48px

// Speakers
.speakers-list,
.speakers-list-container
    margin 0 auto

.heading-title
    margin-bottom 40px

.speakers-list li
    padding 1.5% 
    text-align center
    display inline-block

.speakers-list li:hover
    background coolBlue
    transition background 1.0s ease

// Speaker Details
.bio
    text-align justify
    display flex
    flex-wrap wrap 

// Footer
footer
    text-align center
    clear both
    position fixed
    bottom 0
    font-size 1.5em

// Venue
.venue
     display flex
     flex-wrap wrap
     text-align justify

.venue p
    padding 0
    margin 0

.venue img
    max-width 100%
    margin 0 auto
    display block

@media screen and (min-width: 900px)
    .room-image, .room-details
        width 50%

@media screen and (max-width: 550px)
    .bioImage, .speakerProfile, .speakerName
        width 100%

    .sessions-list li    
        border 2px solid #aa
        border-radius 5px

    .sessions-page-title, .title
        text-align center
    .nav-list 
        display none
