coolBlue = #71bdd6
minorSpacing = 2.5%

.text-center
    text-align center

/* Home page */
.home
    display flex
    flex-wrap wrap
    font-size 1.2em
    line-height 2.0em
    padding minorSpacing

.sponsor-images
    display flex
    flex-flow row wrap 
    justify-content center

    img
        display inline-block
        margin minorSpacing
        width 128px
        height 128px

.main-content
    width 100%
    padding 2%
    overflow hidden

/* Speakers list page  */

.speakers-list
    display flex
    flex-flow wrap
    justify-content center
    background-image url("/images/tiles/whitedust.png");

    li
        padding 1.2%
        text-align center
        display inline-block

    li:hover
        background coolBlue

.thumbnail
    width 118px

.post
    font-size 1.5em
    line-height 2.5em
    margin 5% 


/* speaker's detail page */
.speaker-details
    display flex
    flex-wrap wrap 
    margin 5%

    img
        width 88px
        height 100px

    .bio
        margin-left 2.5%
        font-size 1.5em
        line-height 1.5em
        text-align justify

/* Sessions List */
.sessions-list
    list-style none

    li
        padding 10px 0

    li:hover
        background #ffe7ae
        transition background 0.5s ease-in

    img
        margin-left 10px
